{
  "compilerOptions": {
    /* âœ… Output dan target modern */
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* âœ… Umum untuk proyek Next.js */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    /* âœ… Untuk stabilitas proyek besar */
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    /* âœ… Path alias agar bisa import seperti "@/components/Button" */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  /* âœ… File/folder yang akan di-*compile* */
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  /* ðŸš« Folder yang akan diabaikan sepenuhnya */
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "**/.git/**",
    "**/.turbo/**",
    /* ðŸš« Folder sistem Windows yang bikin error EPERM */
    "C:/Users/ASPIRE/Application Data",
    "C:/Users/ASPIRE/AppData",
    "C:/Windows",
    "C:/ProgramData",
    "C:/Program Files",
    "C:/Program Files (x86)"
  ],
  /* âœ… TypeScript 6.0 baru: compiler options tambahan */
  "ignoreDeprecations": "5.0",
  "references": [],
  "tsBuildInfoFile": ".tsbuildinfo"
}
